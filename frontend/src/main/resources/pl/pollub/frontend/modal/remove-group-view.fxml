<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.pollub.frontend.controller.group.RemoveGroupController">
    <Label styleClass="modalTitle" text="Usuń grupę"/>
    <Label text="Czy na pewno chcesz tą grupę?"/>
    <Label text="Usunięcie grupy jest nieodwracalne i spowoduje usunięcie wszystkich powiązanych z nią danych."/>

    <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 40px 0 0 0">
        <Button styleClass="danger-btn" text="Usuń bezpowrotnie grupę" onAction="#accept">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
        <Button styleClass="danger-outline-btn" text="Anuluj" onAction="#deny">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </HBox>

</VBox>
